#!/bin/sh
#Script to fetch CIM schema for sfcb.

# Depending on the schema version it's necessary to modify some of the lines
# below, currently we use V2.9 in sfcb.

TMPZIP=/tmp/cimv290.zip
MOFZIPURL="http://www.dmtf.org/standards/cim/cim_schema_v29/CIM_V2.9.0Final-MOFs.zip"
SCHEMAMOF=CIM_Schema.mof
HASSUBDIRS=no

trap "rm -f $TMPZIP" exit 

usage()
{
    echo usage: $1 [-f] [schemadir] >&2
}

fixschema()
{
  cd $sfcbdir/CIM
  if [ $SCHEMAMOF != CIM_Schema.mof ]
  then
      cp $SCHEMAMOF CIM_Schema.mof
  fi
}

args=`getopt f $*`
rc=$?

if [ $rc = 127 ]
then
    echo "warning: getopt not found ...continue without syntax check"
    args=$*
elif [ $rc != 0 ]
then
    usage $0
    exit 1
fi

set -- $args

force=0
while [ -n "$1" ]
do
  case $1 in
      -f) force=1
	  shift;;
      --) shift;
	  break;;
  esac
done

if [ $# = 1 ]; then
    sfcbdir=$1
elif [ $# = 0 ]; then
    sfcbdir=@datadir@/sfcb
else
    usage $0
    exit 1
fi

if [ -x /usr/bin/curl ] 
then
   if [ ! -f $sfcbdir/CIM/CIM_Schema.mof ] || [ $force = 1 ]
   then
      echo "Fetching CIM Schema from DMTF homepage ..."
      if [ -d $sfcbdir/CIM ]
      then
	  rm -rf $sfcbdir/CIM
	  if [ $? != 0 ]
	  then
	      echo "Failed to delete schema directory $sfcbdir/CIM" >&2
	      exit 1
	  fi
      fi
      mkdir -p $sfcbdir/CIM
      if [ $HASSUBDIRS = yes ]
      then
	  ZIPFLAGS=
      else
	  ZIPFLAGS=-j
      fi
      if [ $? = 0 ]; then
	  /usr/bin/curl -o $TMPZIP $MOFZIPURL &&
	  unzip $ZIPFLAGS -d $sfcbdir/CIM $TMPZIP &&
          fixschema &&
	  exit 0
      fi
      echo "Failed to fetch and install CIM schema" 1>&2 
   else
      echo "CIM Schema already present - nothing to do."
      exit 0
   fi   
else
    echo "Need curl to get CIM schema files." 1>&2
    exit 1
fi
