#!/bin/bash
#
# $Id$
#
### BEGIN INIT INFO
# Provides:          sfcb
# Default-Start:     3 5
# Default-Stop:      0 1 2 6
# Short-Description: Small Footprint CIM Broker Service
# Description:       Manage the sfcb Service
### END INIT INFO

# Source function library.
. /etc/rc.status

echo $PATH | grep -q @bindir@ ||PATH=@bindir@:$PATH

if [ -z "$LD_LIBRARY_PATH" ] || echo $LD_LIBRARY_PATH | grep -qv @libdir@
then
    LD_LIBRARY_PATH=@libdir@:$LD_LIBRARY_PATH
    export LD_LIBRARY_PATH
fi

# Add CMPI directory
if [ -z "$LD_LIBRARY_PATH" ] || echo $LD_LIBRARY_PATH | grep -qv @libdir@/cmpi
then
    LD_LIBRARY_PATH=@libdir@/cmpi:$LD_LIBRARY_PATH
    export LD_LIBRARY_PATH
fi

start() {
	echo -n "Starting sfcb: "
	startproc @bindir@/sfcbd -d
	rcstatus -v
}	

stop() {
	echo -n "Shutting down sfcb: "
	killproc sfcbd
	rcstatus -v
}

reload() {
	echo -n "Reloading sfcb configuration: "
	killproc -HUP sfcbd
	rcstatus -v
}

case "$1" in
    start)
	start
	;;
    stop)
	stop
	;;
    status)
	checkproc sfcbd
	rc_status -v
	;;
    restart)
    	stop
	start
	;;
    reload)
	reload
	;;
    condrestart)
	$0 status
	if test $? = 0; then
		$0 restart
	else
		rc_reset
	fi
	rc_status
	;;
    *)
	echo "Usage: sfcb {start|stop|status|reload|restart|condrestart}"
	exit 1
	;;
esac
exit $?
